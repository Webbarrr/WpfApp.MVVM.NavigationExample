<UserControl x:Class="WpfApp.MVVM.NavigationExample.MVVM.Views.Screen2View"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WpfApp.MVVM.NavigationExample.MVVM.Views"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel>
        <Label Content="Screen 2"
               DockPanel.Dock="Left"/>
        <Button Content="Screen 3"
                DockPanel.Dock="Right"
                Command="{Binding Screen3Command}" />
    </DockPanel>
</UserControl>